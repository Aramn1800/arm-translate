{
  "name": "arm-translate",
  "description": "Real-time OCR and translation app",
  "author": "Arman Khalegi",
  "private": true,
  "version": "0.0.2",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "migrate": "biome migrate --write",
    "lint": "biome check .",
    "format": "biome format --write ."
  },
  "build": {
    "appId": "com.armtranslate",
    "productName": "ARM Translate",
    "directories": {
      "output": "release",
      "buildResources": "src/public"
    },
    "extraResources": [
      {
        "from": "config.example.json",
        "to": "config.json"
      }
    ],
    "win": {
      "icon": "src/public/translate.ico",
      "requestedExecutionLevel": "requireAdministrator",
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },
    "mac": {
      "icon": "src/public/translate.icns"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "runAfterFinish": false
    }
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.1",
    "@mui/material": "^7.3.1",
    "@tailwindcss/vite": "^4.1.12",
    "jimp": "^1.6.0",
    "mobx": "^6.13.7",
    "mobx-react-lite": "^4.1.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "tailwindcss": "^4.1.12",
    "tesseract.js": "^6.0.1",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.2",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.8",
    "@vitejs/plugin-react": "^5.0.2",
    "electron": "^37.4.0",
    "electron-builder": "^24.13.3",
    "typescript": "^5.9.2",
    "vite": "^7.1.3",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6"
  },
  "main": "dist-electron/main.js"
}
